{
	"name": "portfolio",
	"private": true,
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"dev": "pnpm -r --filter ./apps/* run dev",
		"build": "pnpm -r --filter ./apps/* run build",
		"lint": "pnpm -r --filter ./apps/* run lint",
		"format": "prettier -w .",
		"postinstall": "pnpm -r --filter ./apps/* install"
	},
	"workspaces": [
		"apps/*"
	],
	"devDependencies": {
		"@types/react": "^18.3.26",
		"@types/react-dom": "^18.3.7",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3"
	}
}